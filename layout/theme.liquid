<!DOCTYPE html>
<html lang="{{ shop.locale }}" class="h-full">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="{{ settings.primary_color }}">
  
  <title>{{ page_title }}{% if page_title contains shop.name == false %} - {{ shop.name }}{% endif %}</title>
  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}
  
  {{ content_for_header }}
  
  <!-- Judge.me Core -->
  <link rel="dns-prefetch" href="https://cdn.judge.me/">
  {{ shop.metafields.judgeme.widget_css }}
  {{ shop.metafields.judgeme.widget_script }}
  
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '{{ settings.primary_color }}',
            secondary: '{{ settings.secondary_color }}'
          },
          fontFamily: {
            heading: ['{{ settings.heading_font.family }}', '{{ settings.heading_font.fallback_families }}'],
            body: ['{{ settings.body_font.family }}', '{{ settings.body_font.fallback_families }}']
          }
        }
      }
    }
  </script>
  
  <!-- Alpine.js -->
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  
  <!-- Custom CSS -->
  {{ 'custom.css' | asset_url | stylesheet_tag }}
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="h-full font-body" x-data="{ mobileMenuOpen: false }">
  <div class="min-h-screen flex flex-col">
    {% section 'announcement-bar' %}
    {% section 'header' %}
    
    {% render 'mobile-menu' %}
    
    <main role="main" class="flex-grow">
      {{ content_for_layout }}
    </main>
    
    {% section 'footer' %}
  </div>
  
  {% comment %}Add any additional scripts here{% endcomment %}
  {{ 'shop.js' | asset_url | script_tag }}
  
  <!-- Start of Judge.me Quattro -->
  {{ shop.metafields.judgeme.all_reviews_text }}
  {{ shop.metafields.judgeme.medals }}
  {{ shop.metafields.judgeme.featured_carousel }}
  {{ shop.metafields.judgeme.all_reviews_ui }}
  {{ shop.metafields.judgeme.ali_reviews_importer }}
  <!-- End of Judge.me Quattro -->
</body>
</html>