<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="text-center space-y-4" {{ block.shopify_attributes }}>
          <div class="text-primary">
            {% case block.settings.icon %}
              {% when 'clock' %}
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              {% when 'recycle' %}
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
              {% when 'heart' %}
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
            {% endcase %}
          </div>
          <h3 class="text-xl font-semibold">{{ block.settings.title }}</h3>
          <p class="text-gray-600">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Features",
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "clock",
              "label": "Clock"
            },
            {
              "value": "recycle",
              "label": "Recycle"
            },
            {
              "value": "heart",
              "label": "Heart"
            }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "clock",
            "title": "Easy to Install",
            "description": "5-minute install setup using your board's original holes."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "recycle",
            "title": "Sustainable",
            "description": "Upcycle your old skateboard into a functional piece of art."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "heart",
            "title": "Personalized",
            "description": "Your memories, your design, your light."
          }
        }
      ]
    }
  ]
}
{% endschema %}