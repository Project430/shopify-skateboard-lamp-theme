<footer class="bg-[#166B60] text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-lg font-bold mb-4">{{ shop.name }}</h3>
        <p class="text-white">{{ section.settings.company_description }}</p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {% for link in linklists.footer.links %}
            <li>
              <a href="{{ link.url }}" class="text-white hover:text-gray-200">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-lg font-bold mb-4">Contact</h3>
        {% if section.settings.contact_email != blank %}
          <p class="text-white">{{ section.settings.contact_email }}</p>
        {% endif %}
      </div>
    </div>

    <div class="border-t border-white mt-12 pt-8 text-center text-white">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company Description",
      "default": "Transform your memories into light."
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact Email"
    }
  ]
}
{% endschema %}