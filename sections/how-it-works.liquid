<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-16">{{ section.settings.heading }}</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="flex flex-col items-center space-y-4" {{ block.shopify_attributes }}>
          <div class="w-12 h-12 rounded-full bg-primary text-white flex items-center justify-center text-xl font-bold">
            {{ block.settings.step_number }}
          </div>
          <h3 class="text-xl font-semibold">{{ block.settings.title }}</h3>
          <p class="text-gray-600 text-center">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "How It Works",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "How It Works"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "number",
          "id": "step_number",
          "label": "Step Number",
          "default": 1
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Step Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How It Works",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "step_number": 1,
            "title": "Prep Your Board",
            "description": "Clean and gather your worn deck."
          }
        },
        {
          "type": "step",
          "settings": {
            "step_number": 2,
            "title": "Install the Kit",
            "description": "Attach using the original holes."
          }
        },
        {
          "type": "step",
          "settings": {
            "step_number": 3,
            "title": "Light Up Your Space",
            "description": "Mount it on the wall and enjoy!"
          }
        }
      ]
    }
  ]
}
{% endschema %}