<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <form action="{{ routes.cart_url }}" method="post" novalidate>
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start">
      <div class="lg:col-span-7">
        {%- if cart == empty -%}
          <div class="text-center py-12">
            <h2 class="text-2xl font-medium text-gray-900">Your cart is empty</h2>
            <a href="{{ routes.root_url }}" class="mt-6 inline-block bg-gray-900 text-white px-6 py-3 rounded-md">
              Continue Shopping
            </a>
          </div>
        {%- else -%}
          <ul role="list" class="divide-y divide-gray-200">
            {%- for item in cart.items -%}
              <li class="flex py-6">
                <div class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-md">
                  <img src="{{ item.image | img_url: '200x' }}" alt="{{ item.title | escape }}" class="h-full w-full object-cover object-center">
                </div>
                <div class="ml-4 flex flex-1 flex-col">
                  <div>
                    <div class="flex justify-between text-base font-medium text-gray-900">
                      <h3>{{ item.title }}</h3>
                      <p>{{ item.final_line_price | money }}</p>
                    </div>
                    {%- if item.product.has_only_default_variant == false -%}
                      <p class="mt-1 text-sm text-gray-500">{{ item.variant.title }}</p>
                    {%- endif -%}
                  </div>
                  <div class="flex flex-1 items-end justify-between text-sm">
                    <div class="flex items-center">
                      <label for="Quantity-{{ item.key }}" class="sr-only">Quantity</label>
                      <input type="number" 
                             id="Quantity-{{ item.key }}"
                             name="updates[]"
                             value="{{ item.quantity }}"
                             min="0"
                             class="w-16 rounded-md border border-gray-300 px-3 py-2">
                    </div>
                    <a href="{{ item.url_to_remove }}" class="font-medium text-gray-500 hover:text-gray-800">Remove</a>
                  </div>
                </div>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>

      {%- if cart != empty -%}
        <div class="mt-16 rounded-lg bg-gray-50 px-6 py-6 lg:col-span-5 lg:mt-0">
          <div class="flex justify-between text-base font-medium text-gray-900">
            <p>Subtotal</p>
            <p>{{ cart.total_price | money }}</p>
          </div>
          <p class="mt-1 text-sm text-gray-500">Shipping and taxes calculated at checkout</p>
          <div class="mt-6 space-y-4">
            <button type="submit" name="update" class="w-full bg-white text-gray-900 border border-gray-200 px-6 py-3 rounded-md">
              Update Cart
            </button>
            <button type="submit" name="checkout" class="w-full bg-gray-900 text-white px-6 py-3 rounded-md">
              Checkout
            </button>
          </div>
        </div>
      {%- endif -%}
    </div>
  </form>
</div>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}