<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4 text-center">
    <div class="flex items-center justify-center mb-6">
      {% render 'icon-shield-check' %}
    </div>
    <h2 class="text-3xl font-bold mb-4">{{ section.settings.heading }}</h2>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
      {{ section.settings.description }}
    </p>

    {% if section.blocks.size > 0 %}
      <div class="mt-12 grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {% for block in section.blocks %}
          <div class="bg-white p-6 rounded-lg shadow-sm" {{ block.shopify_attributes }}>
            <h3 class="text-lg font-semibold mb-2">{{ block.settings.title }}</h3>
            <p class="text-gray-600">{{ block.settings.description }}</p>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Safety Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Safe. Simple. Durable."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "With Lightwheel, you can rest assured knowing your skateboard lamp is crafted with high-quality, tested components that prioritize safety. Designed and hand assembled in France, shipping from Paris."
    }
  ],
  "blocks": [
    {
      "type": "safety_feature",
      "name": "Safety Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quality Tested"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "All components undergo rigorous testing for safety and reliability."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Safety Section",
      "blocks": [
        {
          "type": "safety_feature",
          "settings": {
            "title": "Quality Tested",
            "description": "All components undergo rigorous testing for safety and reliability."
          }
        },
        {
          "type": "safety_feature",
          "settings": {
            "title": "Easy Installation",
            "description": "Simple and secure mounting system for worry-free setup."
          }
        }
      ]
    }
  ]
}
{% endschema %}