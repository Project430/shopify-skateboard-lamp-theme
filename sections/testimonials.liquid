<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-16">{{ section.settings.heading }}</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="bg-white p-6 rounded-lg shadow-sm" {{ block.shopify_attributes }}>
          <!-- Star Rating -->
          <div class="flex mb-4">
            {% for i in (1..5) %}
              <svg class="w-5 h-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            {% endfor %}
          </div>
          
          <!-- Testimonial Text -->
          <p class="text-gray-600 mb-4">{{ block.settings.testimonial }}</p>
          
          <!-- Author Info -->
          <div class="flex items-center">
            {% if block.settings.author_image %}
              <img 
                src="{{ block.settings.author_image | img_url: '100x' }}"
                alt="{{ block.settings.author_name }}"
                class="w-10 h-10 rounded-full object-cover mr-3"
              >
            {% endif %}
            <div>
              <p class="font-semibold">{{ block.settings.author_name }}</p>
              {% if block.settings.author_location %}
                <p class="text-sm text-gray-500">{{ block.settings.author_location }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What Our Customers Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial Text",
          "default": "I turned my first skateboard into a lampâ€”now it's the centerpiece of my room!"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Alex T."
        },
        {
          "type": "text",
          "id": "author_location",
          "label": "Author Location",
          "default": "California, USA"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Author Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}