<div
  x-show="mobileMenuOpen"
  class="fixed inset-0 z-50 lg:hidden"
  x-transition:enter="transition-opacity ease-linear duration-300"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  x-transition:leave="transition-opacity ease-linear duration-300"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
>
  <!-- Background backdrop -->
  <div class="fixed inset-0 bg-black bg-opacity-25" @click="mobileMenuOpen = false"></div>
  
  <!-- Menu panel -->
  <div class="relative bg-white h-full w-full max-w-xs">
    <div class="h-full flex flex-col">
      <!-- Header -->
      <div class="px-4 py-4 flex items-center justify-between border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Menu</h2>
        <button 
          @click="mobileMenuOpen = false"
          class="p-2 -m-2 text-gray-400 hover:text-gray-500"
          aria-label="Close menu"
        >
          {% render 'icon-close' %}
        </button>
      </div>
      
      <!-- Navigation -->
      <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
        {% for link in section.settings.menu.links %}
          <a 
            href="{{ link.url }}"
            class="block px-3 py-2 text-base font-medium text-gray-900 hover:bg-gray-50 rounded-md"
            {% if link.active %}aria-current="page"{% endif %}
          >
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>
      
      <!-- Footer -->
      <div class="border-t border-gray-200 px-4 py-6">
        <div class="flex items-center space-x-4">
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="text-gray-400 hover:text-gray-500">
              {% render 'icon-facebook' %}
            </a>
          {% endif %}
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="text-gray-400 hover:text-gray-500">
              {% render 'icon-instagram' %}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>