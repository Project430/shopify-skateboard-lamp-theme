{%- assign current_variant = product.selected_or_first_available_variant -%}

<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Product Images -->
    <div class="product-images">
      <div class="main-image mb-4">
        <img src="{{ current_variant.featured_image | default: product.featured_image | img_url: 'large' }}"
             alt="{{ product.title | escape }}"
             class="w-full h-auto rounded-lg">
      </div>
      {% if product.images.size > 1 %}
        <div class="thumbnails grid grid-cols-4 gap-2">
          {% for image in product.images %}
            <img src="{{ image | img_url: 'compact' }}"
                 alt="{{ image.alt | escape }}"
                 class="w-full h-auto rounded cursor-pointer hover:opacity-75 transition">
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <!-- Product Info -->
    <div class="product-info">
      <h1 class="text-3xl font-bold mb-4">{{ product.title }}</h1>
      
      <!-- Price -->
      <div class="price-container mb-6">
        <span class="text-2xl font-semibold">
          {{ current_variant.price | money }}
        </span>
        {% if current_variant.compare_at_price > current_variant.price %}
          <span class="text-lg text-gray-500 line-through ml-2">
            {{ current_variant.compare_at_price | money }}
          </span>
        {% endif %}
      </div>

      <!-- Variant Selector -->
      {% unless product.has_only_default_variant %}
        <div class="variants-wrapper mb-6">
          {% for option in product.options_with_values %}
            <div class="mb-4">
              <label class="block text-sm font-medium mb-2">
                {{ option.name }}
              </label>
              <select class="w-full border rounded-md py-2 px-3"
                      name="options[{{ option.name | escape }}]">
                {% for value in option.values %}
                  <option value="{{ value | escape }}"
                          {% if option.selected_value == value %}selected="selected"{% endif %}>
                    {{ value }}
                  </option>
                {% endfor %}
              </select>
            </div>
          {% endfor %}
        </div>
      {% endunless %}

      <!-- Add to Cart -->
      <form action="/cart/add" method="post" class="mb-6">
        <input type="hidden" name="id" value="{{ current_variant.id }}">
        <input type="number" 
               name="quantity" 
               value="1" 
               min="1"
               class="w-20 border rounded-md py-2 px-3 mb-4">
        <button type="submit"
                class="w-full bg-blue-600 text-white py-3 px-6 rounded-md hover:bg-blue-700 transition"
                {% unless current_variant.available %}disabled{% endunless %}>
          {% if current_variant.available %}
            Add to Cart
          {% else %}
            Sold Out
          {% endif %}
        </button>
      </form>

      <!-- Description -->
      <div class="description prose">
        {{ product.description }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product",
  "settings": []
}
{% endschema %}